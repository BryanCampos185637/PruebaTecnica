@model List<Modelo.ViewModels.EstudianteVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Estudiantes</h1>
<div class="row">
    <div class="col-md-12 mb-3">
        <div class="card">
            <div class="card-body">
                <a asp-action="Guardar" asp-controller="Estudiante" class="btn btn-primary">Nuevo estudiante</a>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Edad</th>
                            <th>Fecha nacimiento</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody class="animated fadeInLeft">
                        @if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.nombre</td>
                                    <td>@item.edad</td>
                                    <td>@item.fechaNacimiento</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-info" data-toggle="modal" data-target="#exampleModal" onclick="detalle(@item.EstudianteId)">Ver detalles</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="text-center">
                                <td colspan="4" class="text-danger">No hay registro en la base de datos</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <table class="table table-hover table-bordered">
                    <tbody id="tablaContenido" class="animated fadeInDown">

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="~/js/Ajax/detalle.js"></script>